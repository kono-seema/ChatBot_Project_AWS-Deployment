packages:
  yum:
    amazon-cloudwatch-agent: []

files:
  "/opt/aws/amazon-cloudwatch-agent/etc/config.json":
    mode: "000600"
    owner: root
    group: root
    content: |
      {
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/eb-engine.log",
                  "log_group_name": "/aws/elasticbeanstalk/chatbot-app/eb-engine",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/nodejs/nodejs.log",
                  "log_group_name": "/aws/elasticbeanstalk/chatbot-app/application",
                  "log_stream_name": "{instance_id}"
                }
              ]
            }
          }
        },
        "metrics": {
          "namespace": "ChatbotApp",
          "metrics_collected": {
            "cpu": {
              "measurement": [{"name": "cpu_usage_active"}],
              "metrics_collection_interval": 60
            },
            "mem": {
              "measurement": [{"name": "mem_used_percent"}],
              "metrics_collection_interval": 60
            }
          }
        }
      }

commands:
  01_start_cloudwatch:
    command: |
      /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl \
        -a fetch-config \
        -m ec2 \
        -s \
        -c file:/opt/aws/amazon-cloudwatch-agent/etc/config.json